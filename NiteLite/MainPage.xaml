<Page
    x:Class="NiteLIte.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="313*"/>
            <ColumnDefinition Width="398*"/>
            <ColumnDefinition Width="313*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="109*"/>
            <RowDefinition Height="81*"/>
        </Grid.RowDefinitions>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" Height="35" Margin="93,145,0,0" VerticalAlignment="Top" Width="30" Grid.Row="2"/>
        <Image x:Name="splashImage" Grid.Column="1" Grid.Row="1" Source="Assets/ironman.jpg"/>
        <TextBlock x:Name="textBlock" Grid.Row="2" TextWrapping="Wrap" Text="NITELITE" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="64" Grid.ColumnSpan="3"/>

    </Grid>
</Page>
